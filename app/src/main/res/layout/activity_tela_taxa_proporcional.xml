<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaTaxaProporcional"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/telaTaxaProporcionalEditTextPeriodoConvertido"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="@string/para_qual_periodo"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/telaTaxaProporcionalEditTextTaxa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/telaTaxaProporcionalEditTextTaxa"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="@string/digite_a_taxa"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/telaTaxaProporcionalEditTextPeriodo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/telaTaxaProporcionalEditTextPeriodo"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="@string/digite_o_per_odo_atual"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/telaTaxaProporcionalButtonCalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/telaTaxaProporcionalButtonCalcular"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_button"
        android:text="Calcular!"
        android:layout_marginBottom="255dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/telaTaxaProporcionalButtonLimpar"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button_delete"
        android:text="Limpar!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telaTaxaProporcionalButtonCalcular" />

    <TextView
        android:id="@+id/telaTaxaProporcionalTextViewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="casual"
        android:text="@string/montante_de"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>