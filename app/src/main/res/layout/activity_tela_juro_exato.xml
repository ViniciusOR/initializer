<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaJuroExato"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/telaJuroExatoEditTextTaxa"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_margin="64dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="@string/digite_a_taxa"
        android:maxLength="5"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/telaJuroExatoButtonCalcular"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/background_button"
        android:text="Calcular!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telaJuroExatoEditTextTaxa" />

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/telaJuroExatoTextViewResultadoTaxa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="casual"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:maxLength="4"
            android:textAlignment="center"
            android:textSize="25sp" />
    </RelativeLayout>
    <Button
        android:id="@+id/telaJuroExatoButtonLimpar"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/background_button_delete"
        android:text="Limpar!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telaJuroExatoButtonCalcular" />

</androidx.constraintlayout.widget.ConstraintLayout>